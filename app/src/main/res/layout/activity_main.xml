<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 텍스트 디스플레이 영역 (전자책 스타일) -->
    <FrameLayout
        android:id="@+id/textDisplayContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:elevation="0dp">
        
        <TextView
            android:id="@+id/textDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.12"
            android:padding="8dp"
            android:text=""
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:scrollbars="none"
            android:ellipsize="none"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:longClickable="false"
            android:elevation="1dp" />
        
        <!-- 페이지 번호 표시 -->
        <TextView
            android:id="@+id/pageNumberDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:elevation="2dp" />
    </FrameLayout>
    
    <!-- 페이지 인디케이터 -->
    <LinearLayout
        android:id="@+id/pageIndicatorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">
        
        <FrameLayout
            android:id="@+id/pageIndicatorFrame"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#E0E0E0"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">
            
            <!-- 흰색 박스 (핸들러 좌우 3px) -->
            <View
                android:id="@+id/pageIndicatorHandleBox"
                android:layout_width="36dp"
                android:layout_height="25dp"
                android:background="#FFFFFF"
                android:layout_gravity="start|center_vertical"
                android:clickable="true"
                android:focusable="true" />
            
            <!-- 검은색 핸들러 (중앙에 위치) -->
            <View
                android:id="@+id/pageIndicatorHandle"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="#000000"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="3dp"
                android:clickable="true"
                android:focusable="true" />
            
            <!-- 위 2.25/5 흰색 박스 (시각적 마스킹) - 핸들러 위에 그려짐 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="11.25dp"
                android:background="#FFFFFF"
                android:layout_gravity="top"
                android:clickable="false"
                android:focusable="false" />
            
            <!-- 아래 2.25/5 흰색 박스 (시각적 마스킹) - 핸들러 위에 그려짐 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="11.25dp"
                android:background="#FFFFFF"
                android:layout_gravity="bottom"
                android:clickable="false"
                android:focusable="false" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/voiceButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Female #1" />

        <Button
            android:id="@+id/voiceButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Female #2" />

        <Button
            android:id="@+id/voiceButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Male #1" />

        <Button
            android:id="@+id/voiceButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Male #2" />
    </LinearLayout>

    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/copyErrorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Copy Error Message"
        android:visibility="gone" />

    <!-- 간단한 오디오 플레이어 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2.67dp"
        android:paddingBottom="5.33dp"
        android:gravity="center_vertical">

        <!-- 좌측 영역: Voice 선택 -->
        <TextView
            android:id="@+id/voiceSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice  Female #1"
            android:textSize="15.6sp"
            android:textColor="#000000"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:lineSpacingMultiplier="1.0" />

        <!-- Speed 선택 (Voice 옆에 20px 간격) -->
        <TextView
            android:id="@+id/speedSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed  1x"
            android:textSize="15.6sp"
            android:textColor="#000000"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:lineSpacingMultiplier="1.0" />

        <!-- CPS/RTF 표시 (좌측 정렬) -->
        <TextView
            android:id="@+id/mediaMetricsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15.6sp"
            android:textColor="#aaaaaa"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:lineSpacingMultiplier="1.0" />

        <!-- Speed temp (클론, 내용 없음) -->
        <TextView
            android:id="@+id/speedSelectorTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textSize="15.6sp"
            android:textColor="#000000"
            android:clickable="false"
            android:focusable="false"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp" />

        <!-- 우측: Play 버튼 -->
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:enabled="false"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play"
            android:scaleType="fitCenter"
            android:contentDescription="Play button" />

        <!-- 우측 영역: 재생 시간 (숨김) -->
        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00 / 00:00"
            android:textSize="15.6sp"
            android:textColor="#000000"
            android:gravity="end|bottom"
            android:layout_gravity="bottom"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
